{
  "manifest_version": 3,
  "name": "Gemini Translate",
  "version": "1.0",
  "description": "Dịch nhanh bằng Gemini AI",
  "permissions": ["contextMenus", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ]
}
  